{
  "variables": {
    "project_id": "",
    "k8s_version": "",
    "tag": "default"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-minimal-1810",
      "machine_type": "n1-standard-4",
      "zone": "europe-west1-b",
      "ssh_username" : "root",
      "disk_size": "20",
      "image_name": "k3s-consul",
      "image_labels": {
        "track": "kubernetes",
        "created": "{{ timestamp }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "bootstrap.sh"
    }
  ]

}
